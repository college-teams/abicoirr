<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FILE_PATH" value="/etc/abicoirr-api/logs/app.log" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_PATH}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger Configuration -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Spring Framework Logger -->
    <logger name="org.springframework" level="info">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Spring Boot Logger -->
    <logger name="org.springframework.boot" level="info">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Spring JPA Logger -->
    <logger name="org.springframework.data.jpa" level="info">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Custom Logger for com.project.abicoirr -->
    <logger name="com.project.abicoirr" level="info">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Add more loggers as needed -->
</configuration>
